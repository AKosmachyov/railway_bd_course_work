<style>
    #main {
        text-align: center;
        font-size: 22px;
    }
    div {
        margin-bottom: 15px;
    }
    #main div span {
        text-decoration: underline;
    }
    #main > span {
        margin-bottom: 15px;
        display: block;
    }
    </style>    
    <div id="main">
        <span>БЛАНК ЭЛЕКТРОННОГО ПРОЕЗДНОГО ДОКУМЕНТА</span>
        <div>Номер заказа: @Model.orderNumber</div>
        <div>Ф.И.О.: @Model.fio</div>
        <div>Номер проездного документа: @Model.passportSeria</div>
        <div>
            Отправление:
            <span>
                @Model.fromStation
                @Model.fromDate.ToString("dd/MM/yyyy HH:mm")
            </span>
        </div> 
        <div>
            Прибытие:
            <span>
                @Model.toStation
                @Model.toDate.ToString("dd/MM/yyyy HH:mm")
            </span>
        </div>          
        <div>
            Вагон: 
            <span>
             @Model.carriage
             </span>
              Место: узнавайте у проводника
        </div>
    </div>