@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div>
        @if (Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Номер вагона</th>
                    <th>Класс вагона</th>
                    <th>Цена поездки</th>
                    <th>Свободно мест</th>
                </tr>
            </thead>
            <tbody>
                @foreach (CarriageView item in Model)
                 {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.carriageNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.carriageType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.price)р.
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.freeSeats)
                        </td>
                    </tr>
                 }
            </tbody>
        </table>
}
    </div>
</div>