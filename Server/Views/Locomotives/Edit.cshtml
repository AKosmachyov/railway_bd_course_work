@model Server.Locomotive

@{
    ViewData["Title"] = "Edit";
}

<h2>Редактировать</h2>

<h4>Locomotive</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PricePerKilometer" class="control-label">Цена за км.</label>
                <input asp-for="PricePerKilometer" class="form-control" />
                <span asp-validation-for="PricePerKilometer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
